<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/rlCancelTrain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardBackgroundColor="@color/card_view_background"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <RelativeLayout
            android:id="@+id/rlFromToStation"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/txtSourceStation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="Lucknow"
                android:textColor="@color/card_view_text_color"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/txtDestinationStation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="Mumbai"
                android:textColor="@color/card_view_text_color"
                android:textSize="16sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_toLeftOf="@+id/txtDestinationStation"
                android:layout_toRightOf="@+id/txtSourceStation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/txtTrainNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_weight=".2"
                        android:gravity="end|center_vertical"
                        android:layout_centerInParent="true"
                        android:text="Train Number"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".2"
                        android:layout_toRightOf="@+id/imgEngine"
                        android:src="@drawable/right_arrow"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlTrainName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/rlFromToStation">

            <TextView
                android:id="@+id/txtTrainName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="Train Name"
                android:textColor="@color/card_view_text_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txtTrainNameValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="Pushpak"
                android:textColor="@color/card_view_text_color"
                android:textSize="16sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlTrainTime"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/rlTrainName">

            <TextView
                android:id="@+id/txtTrainTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="Departure Time"
                android:textColor="@color/card_view_text_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txtTrainTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="7:20 PM"
                android:textColor="@color/card_view_text_color"
                android:textSize="16sp"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
