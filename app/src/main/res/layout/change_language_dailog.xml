<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@color/light_text_color"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtSelectLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Select Language"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <View
        android:id="@+id/txtLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txtSelectLanguage"
        android:layout_marginTop="2dp"
        android:background="@android:color/black"/>

    <TextView
        android:id="@+id/txtHindi"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/txtLine"
        android:layout_marginTop="5dp"
        android:text="Hindi"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txtEnglish"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@id/txtHindi"
        android:gravity="center"
        android:text="English"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txtMarathi"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@id/txtEnglish"
        android:gravity="center"
        android:text="Marathi"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

</RelativeLayout>